---
// Get current path for active link highlighting
const { pathname } = Astro.url;
---

<header
    class="fixed w-full z-50 bg-white backdrop-blur-md shadow-sm border-b border-amber-100"
>
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-20">
            <div class="flex-shrink-0 flex items-center">
                <a href="/" class="flex items-center gap-3 group">
                    <img
                        src="/images/logo.png"
                        alt="Fundaci칩n Logo"
                        class="h-14 w-auto transition-transform duration-300 group-hover:scale-105"
                    />
                    <h1
                        class="text-lg md:text-xl font-bold bg-gradient-to-r from-amber-700 to-amber-500 bg-clip-text text-transparent"
                    >
                        Paraiso de la Mascota
                    </h1>
                </a>
            </div>

            <div class="hidden md:flex md:items-center lg:space-x-4">
                {
                    [
                        { href: "/", text: "Inicio" },
                        { href: "/mascotas", text: "Adopta" },
                        { href: "/ayudanos", text: "Ay칰danos" },
                        { href: "/tienda", text: "Tienda" },
                        { href: "/servicios", text: "Servicios" },
                        { href: "/contacto", text: "Contacto" },
                    ].map((link) => {
                        const isActive =
                            pathname === link.href ||
                            (link.href !== "/" &&
                                pathname.startsWith(link.href));
                        return (
                            <a
                                href={link.href}
                                class={`relative px-3 py-2 rounded-md text-sm font-medium transition-all duration-200 ease-in-out
                                       ${
                                           isActive
                                               ? "text-amber-700 bg-amber-50"
                                               : "text-gray-600 hover:text-amber-600 hover:bg-amber-50/50"
                                       }`}
                                aria-current={isActive ? "page" : undefined}
                            >
                                {link.text}
                                <span
                                    class={`absolute bottom-0 left-0 w-full h-0.5 bg-amber-500 transform origin-left transition-transform duration-300
                                            ${isActive ? "scale-x-100" : "scale-x-0 group-hover:scale-x-100"}`}
                                />
                            </a>
                        );
                    })
                }

                <a
                    href="/ayudanos#donaciones"
                    class="ml-2 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-amber-600 hover:bg-amber-700 transition-colors duration-200"
                >
                    Donar
                </a>
            </div>

            <!-- Bot칩n m칩vil mejorado -->
            <div class="flex items-center md:hidden">
                <button
                    type="button"
                    id="mobile-menu-button"
                    class="inline-flex items-center justify-center p-2 rounded-md text-amber-600 hover:text-amber-700 hover:bg-amber-50 transition-colors duration-200"
                    aria-label="Men칰 principal"
                    aria-expanded="false"
                >
                    <span class="sr-only">Abrir men칰 principal</span>
                    <div
                        class="hamburger w-6 h-6 flex flex-col justify-center items-center"
                    >
                        <span
                            class="block w-5 h-0.5 bg-current transform transition duration-300 ease-in-out hamburger-line-1"
                        ></span>
                        <span
                            class="block w-5 h-0.5 bg-current transform transition duration-300 ease-in-out my-1 hamburger-line-2"
                        ></span>
                        <span
                            class="block w-5 h-0.5 bg-current transform transition duration-300 ease-in-out hamburger-line-3"
                        ></span>
                    </div>
                </button>
            </div>
        </div>

        <!-- Men칰 m칩vil mejorado -->
        <div
            class="md:hidden fixed inset-0 bg-black/50 opacity-0 pointer-events-none transition-opacity duration-300 ease-in-out z-40"
            id="mobile-backdrop"
        >
        </div>
        <div
            class="md:hidden fixed right-0 top-0 bottom-0 w-80 bg-white backdrop-blur-md shadow-2xl border-l border-amber-100 transform translate-x-full transition-transform duration-300 ease-in-out z-50"
            id="mobile-menu"
        >
            <!-- Header del men칰 m칩vil -->
            <div
                class="flex items-center justify-between p-4 border-b border-amber-100 bg-white backdrop-blur-sm"
            >
                <div class="flex items-center gap-2">
                    <img src="/images/logo.png" alt="Logo" class="h-8 w-auto" />
                    <span class="text-sm font-semibold text-amber-700"
                        >Para칤so de la Mascota</span
                    >
                </div>
                <button
                    type="button"
                    id="mobile-menu-close"
                    class="p-2 rounded-full text-gray-400 hover:text-gray-600 hover:bg-gray-100 transition-colors duration-200"
                    aria-label="Cerrar men칰"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Contenido del men칰 -->
            <div
                class="flex-1 pt-6 pb-6 px-4 space-y-1 bg-white backdrop-blur-sm overflow-y-auto"
            >
                {
                    [
                        { href: "/", text: "Inicio" },
                        { href: "/mascotas", text: "Adopta" },
                        { href: "/ayudanos", text: "Ay칰danos" },
                        { href: "/tienda", text: "Tienda" },
                        { href: "/servicios", text: "Servicios" },
                        { href: "/contacto", text: "Contacto" },
                    ].map((link) => {
                        const isActive =
                            pathname === link.href ||
                            (link.href !== "/" &&
                                pathname.startsWith(link.href));
                        return (
                            <a
                                href={link.href}
                                class={`mobile-menu-link block px-4 py-4 text-base font-medium rounded-xl transition-all duration-200 border-l-4
                                      ${
                                          isActive
                                              ? "text-amber-700 bg-amber-50 border-amber-500 shadow-sm"
                                              : "text-gray-700 hover:text-amber-600 hover:bg-amber-50/80 border-transparent hover:border-amber-300"
                                      }`}
                                aria-current={isActive ? "page" : undefined}
                            >
                                <span class="flex items-center gap-3">
                                    {link.text}
                                    {isActive && (
                                        <svg
                                            class="w-4 h-4 text-amber-500"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                    )}
                                </span>
                            </a>
                        );
                    })
                }

                <!-- Bot칩n de donaci칩n destacado -->
                <div class="pt-6 mt-6 border-t border-amber-100">
                    <a
                        href="/ayudanos#donaciones"
                        class="mobile-menu-link block text-center px-6 py-4 rounded-xl bg-gradient-to-r from-amber-500 to-amber-600 text-white font-semibold shadow-lg hover:from-amber-600 hover:to-amber-700 transform hover:scale-105 transition-all duration-200"
                    >
                        游눟 Donar Ahora
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<style>
    /* Hamburger animation */
    .hamburger.active .hamburger-line-1 {
        transform: translateY(8px) rotate(45deg);
    }
    .hamburger.active .hamburger-line-2 {
        opacity: 0;
    }
    .hamburger.active .hamburger-line-3 {
        transform: translateY(-8px) rotate(-45deg);
    }
</style>

<script>
    // Add this function to your Navbar.astro script section
    document.addEventListener("astro:page-load", () => {
        // Initialize DOM elements
        const mobileMenuButton = document.getElementById("mobile-menu-button");
        const mobileMenuClose = document.getElementById("mobile-menu-close");
        const mobileMenu = document.getElementById("mobile-menu");
        const mobileBackdrop = document.getElementById("mobile-backdrop");
        const hamburger = document.querySelector(".hamburger");
        const mobileMenuLinks = document.querySelectorAll(".mobile-menu-link");

        // Toggle mobile menu
        function toggleMobileMenu() {
            const isOpen = mobileMenu?.classList.contains("translate-x-0");

            if (isOpen) {
                // Close menu
                mobileMenu?.classList.remove("translate-x-0");
                mobileMenu?.classList.add("translate-x-full");
                mobileBackdrop?.classList.add("opacity-0");
                mobileBackdrop?.classList.remove("opacity-100");
                mobileBackdrop?.classList.add("pointer-events-none");
                hamburger?.classList.remove("active");
                document.body.classList.remove("overflow-hidden");
                mobileMenuButton?.setAttribute("aria-expanded", "false");
            } else {
                // Open menu
                mobileMenu?.classList.add("translate-x-0");
                mobileMenu?.classList.remove("translate-x-full");
                mobileBackdrop?.classList.remove("opacity-0");
                mobileBackdrop?.classList.add("opacity-100");
                mobileBackdrop?.classList.remove("pointer-events-none");
                hamburger?.classList.add("active");
                document.body.classList.add("overflow-hidden");
                mobileMenuButton?.setAttribute("aria-expanded", "true");
            }
        }

        // Add event listeners
        mobileMenuButton?.addEventListener("click", toggleMobileMenu);
        mobileMenuClose?.addEventListener("click", toggleMobileMenu);
        mobileBackdrop?.addEventListener("click", toggleMobileMenu);

        // Close menu when clicking on links
        mobileMenuLinks.forEach((link) => {
            link.addEventListener("click", () => {
                // Small delay to allow navigation
                setTimeout(toggleMobileMenu, 100);
            });
        });

        // Close menu on window resize
        window.addEventListener("resize", () => {
            if (
                window.innerWidth >= 768 &&
                mobileMenu?.classList.contains("translate-x-0")
            ) {
                toggleMobileMenu();
            }
        });

        // Close menu on escape key
        document.addEventListener("keydown", (e) => {
            if (
                e.key === "Escape" &&
                mobileMenu?.classList.contains("translate-x-0")
            ) {
                toggleMobileMenu();
            }
        });
    });
</script>

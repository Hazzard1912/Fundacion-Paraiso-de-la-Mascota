---
import { getFeaturedPets } from "../actions/cms.actions"; 

const { data, error } = await Astro.callAction(getFeaturedPets, {});

if (error) {
    console.error("Error fetching featured pets:", error);
}

interface Pet {
    documentId: string;
    name: string;
    description: string;
    species: string;
    ageGroup: string;
    gender: string;
    size: string;
    photos: Array<{
        id: number;
        url: string;
        alternativeText?: string;
    }>;
}

// Procesar las mascotas para usar la imagen de cada una
const featuredPets: Pet[] = (data?.data?.pets || []).map((pet: any) => {
    // Usar la imagen del pet o una imagen por defecto
    console.log("Pet", pet);
    const imageUrl = pet.imageUrl || "/images/shelter-dogs.jpg";
    
    return {
        documentId: pet.documentId,
        name: pet.name,
        description: pet.description,
        species: pet.species,
        ageGroup: pet.ageGroup,
        gender: pet.gender,
        size: pet.size,
        photos: [{
            id: pet.id,
            url: imageUrl,
            alternativeText: pet.alternativeText || pet.name
        }]
    };
});

console.log("featuredPets: ", featuredPets);

featuredPets.forEach((pet) => {
    console.log(pet);
});
---

<section class="bg-white py-28">
    <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2
                class="text-4xl font-extrabold text-amber-900 mb-6 tracking-tight"
            >
                Mascotas esperando un hogar
            </h2>
            <p class="text-lg text-gray-700 max-w-3xl mx-auto">
                Conoce algunos de nuestros peludos que están buscando una
                familia. Cada uno tiene una historia especial y mucho amor para
                dar.
            </p>
        </div>

        <!-- Featured pets grid -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 gap-y-14"
        >
            {featuredPets.map((pet: Pet) => (
                <a
                    href={`/adopta/${pet.documentId}`}
                    class="group bg-amber-50 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 border border-amber-100"
                >
                    <div class="aspect-square overflow-hidden flex items-center justify-center bg-white">
                        <img
                            src={pet.photos[0].url}
                            alt={pet.photos[0].alternativeText}
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105 rounded-t-2xl"
                        />
                    </div>
                    <div class="p-6">
                        <h3 class="font-bold text-2xl mb-2 text-amber-800">
                            {pet.name}
                        </h3>
                        <div class="flex flex-wrap gap-2 mb-3">
                            <span class="bg-amber-200 text-amber-900 px-3 py-1 rounded-full text-xs font-semibold">
                                {pet.species}
                            </span>
                            <span class="bg-amber-200 text-amber-900 px-3 py-1 rounded-full text-xs font-semibold">
                                {pet.ageGroup}
                            </span>
                        </div>
                        <p class="text-gray-600 text-sm line-clamp-2 mb-4">
                            {pet.description}
                        </p>
                        <div class="flex items-center justify-between">
                            <span class="text-amber-700 font-medium text-sm inline-flex items-center group-hover:text-amber-900 transition-colors">
                                Conocer más
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-4 w-4 ml-1"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 5l7 7-7 7"
                                    />
                                </svg>
                            </span>
                        </div>
                    </div>
                </a>
            ))}
        </div>

        <!-- Call to action button -->
        <div class="text-center mt-16">
            <a
                href="/adopta"
                class="inline-block bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 px-10 rounded-xl transition-colors shadow-lg hover:shadow-amber-200/60"
            >
                Ver todas las mascotas
            </a>
        </div>
    </div>
</section>

<style>
    @media (max-width: 640px) {
        .aspect-square {
            min-height: 220px;
        }
    }
</style>

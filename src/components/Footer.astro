---
const currentYear = new Date().getFullYear();

const footerSections = {
    "Enlaces": [
        { name: "Nuestra Historia", href: "/#historia" },
        { name: "Preguntas Frecuentes", href: "/#faq" },
        { name: "Noticias", href: "/noticias" },
        { name: "Contacto", href: "/contacto" },
        { name: "Transparencia ESAL", href: "/transparencia" },
    ],
    "Servicios": [
        { name: "Proceso de Adopción", href: "/adopta" },
        { name: "Donaciones", href: "/ayudanos#donaciones" },
        { name: "Esterilización", href: "/servicios#esterilizacion" },
        { name: "Veterinaria", href: "/servicios#veterinaria" },
        { name: "Tienda", href: "/tienda" },
    ],
};

const contactInfo = [
    {
        type: "phone",
        value: "+57 315 269 8780",
        href: "tel:+573152698780",
        icon: "phone",
    },
    {
        type: "email",
        value: "direcciongeneral@paraisodelamascota.org",
        href: "mailto:direcciongeneral@paraisodelamascota.org",
        icon: "envelope",
    },
    {
        type: "address",
        value: "Calle 3 #  123-146, Parcelación Piedra Grande, Santiago de Cali, Colombia",
        href: "https://maps.app.goo.gl/ZcBbfMsg24bN23AA9",
        icon: "map-marker-alt",
    },
];

const socialLinks = [
    {
        name: "Facebook",
        href: "https://www.facebook.com/ParaisodelaMascotaCali",
        icon: "fa-facebook-f",
    },
    {
        name: "Instagram",
        href: "https://www.instagram.com/paraisocali/",
        icon: "fa-instagram",
    },
];
---

<footer class="bg-gray-800 text-gray-100">
    <!-- Main Footer Content -->
    <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Brand & Info Column -->
            <div>
                <div class="bg-white p-3 rounded-lg inline-block mb-4">
                    <img
                        src="/images/logo.png"
                        alt="Fundación Logo"
                        class="h-20 w-auto"
                    />
                </div>
                <p class="text-gray-300 mb-6">
                    Transformando vidas de mascotas abandonadas y creando
                    familias felices desde 2003.
                </p>
            </div>

            <!-- Contacto Column -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-amber-400">
                    Contacto
                </h3>
                <div class="space-y-3 text-gray-300">
                    {
                        contactInfo.map((item) => (
                            <a
                                href={item.href}
                                class="flex items-center gap-3 hover:text-amber-300 transition-colors"
                                target={item.type === "address" ? "_blank" : undefined}
                                rel={item.type === "address" ? "noopener noreferrer" : undefined}
                                style={item.type === "email" ? "word-break: break-all;" : undefined}
                            >
                                <i class={`fas fa-${item.icon} w-5 text-amber-400`} />
                                {item.type === "email"
                                    ? <span class="truncate md:max-w-[200px] block" title={item.value}>{item.value}</span>
                                    : item.value
                                }
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Enlaces Column -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-amber-400">
                    Enlaces
                </h3>
                <ul class="space-y-3">
                    {footerSections.Enlaces.map((link) => (
                        <li>
                            <a
                                href={link.href}
                                class="text-gray-300 hover:text-amber-300 transition-colors inline-block"
                            >
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Servicios Column -->
            <div>
                <h3 class="text-lg font-semibold mb-4 text-amber-400">
                    Servicios
                </h3>
                <ul class="space-y-3">
                    {footerSections.Servicios.map((link) => (
                        <li>
                            <a
                                href={link.href}
                                class="text-gray-300 hover:text-amber-300 transition-colors inline-block"
                            >
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 bg-gray-900">
        <div class="max-w-6xl mx-auto px-4 py-4">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-gray-400 text-sm">
                    © {currentYear} Paraíso de la Mascota Cali. Todos los derechos
                    reservados.
                </div>
                <div class="flex flex-col md:flex-row items-center gap-4 md:gap-6">
                    <div class="flex gap-4">
                        {
                            socialLinks.map((social) => (
                                <a
                                    href={social.href}
                                    class="w-10 h-10 rounded-full bg-gray-800 hover:bg-amber-500 flex items-center justify-center transition-all duration-200 transform hover:scale-110"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <i class={`fab ${social.icon} text-amber-100`} />
                                    <span class="sr-only">{social.name}</span>
                                </a>
                            ))
                        }
                    </div>
                    <div class="hidden md:block w-px h-6 bg-gray-700"></div>
                    <div class="flex gap-6 text-sm">
                        <a
                            href="/politica-privacidad"
                            class="text-gray-300 hover:text-amber-300 transition-colors"
                        >
                            Privacidad
                        </a>
                        <a
                            href="/terminos-condiciones"
                            class="text-gray-300 hover:text-amber-300 transition-colors"
                        >
                            Términos
                        </a>
                        <a
                            href="/transparencia"
                            class="text-gray-300 hover:text-amber-300 transition-colors"
                        >
                            Transparencia ESAL
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- Font Awesome -->
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>

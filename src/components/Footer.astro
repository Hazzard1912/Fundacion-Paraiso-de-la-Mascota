---
const currentYear = new Date().getFullYear();

const footerLinks = {
    "Sobre Nosotros": [
        { name: "Nuestra Historia", href: "/nosotros" },
        { name: "Impacto Social", href: "/#impacto" },
        { name: "Equipo", href: "/equipo" },
        { name: "Reconocimientos", href: "/reconocimientos" },
    ],
    Servicios: [
        { name: "Proceso de Adopción", href: "/adopta" },
        { name: "Programa de Apadrinamiento", href: "/apadrina" },
        { name: "Donaciones", href: "/dona" },
        { name: "Voluntariado", href: "/voluntariado" },
    ],
    Ayuda: [
        { name: "Preguntas Frecuentes", href: "/faq" },
        { name: "Consejos de Cuidado", href: "/guia" },
        { name: "Blog", href: "/blog" },
    ],
};

const contactInfo = {
    phone: "+57 (602) 555-0123",
    email: "contacto@paraisomascota.org",
    address: "Calle 123 #45-67, Cali, Colombia",
};

const socialLinks = [
    { name: "Facebook", href: "#", icon: "fa-facebook-f" },
    { name: "Instagram", href: "#", icon: "fa-instagram" },
    { name: "Twitter", href: "#", icon: "fa-twitter" },
    { name: "YouTube", href: "#", icon: "fa-youtube" },
];
---

<footer class="bg-gray-900 text-gray-100">
    <!-- Newsletter Section -->
    <div class="border-b border-gray-800">
        <div class="max-w-6xl mx-auto px-4 py-12">
            <div
                class="flex flex-col md:flex-row items-center justify-between gap-8"
            >
                <div class="text-center md:text-left">
                    <h3 class="text-2xl font-bold text-white mb-2">
                        Únete a nuestra familia
                    </h3>
                    <p class="text-gray-400">
                        Recibe noticias sobre nuestros peludos y eventos
                        especiales
                    </p>
                </div>
                <form class="flex w-full md:w-auto gap-2">
                    <input
                        type="email"
                        placeholder="Tu correo electrónico"
                        class="px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder:text-gray-400 flex-1 md:w-80 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <button
                        class="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg transition-all duration-200 transform hover:scale-105"
                    >
                        Suscribirse
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Main Footer Content -->
    <div class="max-w-6xl mx-auto px-4 py-16">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-12">
            <!-- Brand Column -->
            <div class="lg:col-span-2">
                <img src="" alt="Paraíso de la Mascota" class="h-12 mb-6" />
                <p class="text-gray-400 mb-6">
                    Transformando vidas de mascotas abandonadas y creando
                    familias felices desde 2010.
                </p>
                <div class="space-y-3 text-gray-400">
                    {
                        Object.entries(contactInfo).map(([key, value]) => (
                            <p class="flex items-center gap-3 hover:text-gray-300 transition-colors">
                                <i
                                    class={`fas fa-${key === "phone" ? "phone" : key === "email" ? "envelope" : "map-marker-alt"} w-5`}
                                />
                                {value}
                            </p>
                        ))
                    }
                </div>
            </div>

            <!-- Links Columns -->
            {
                Object.entries(footerLinks).map(([title, links]) => (
                    <div class="lg:col-span-1">
                        <h3 class="text-lg font-semibold mb-4 text-white">
                            {title}
                        </h3>
                        <ul class="space-y-3">
                            {links.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="text-gray-400 hover:text-blue-400 transition-colors inline-block"
                                    >
                                        {link.name}
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))
            }
        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800">
        <div class="max-w-6xl mx-auto px-4 py-6">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-4"
            >
                <div class="text-gray-400 text-sm">
                    © {currentYear} Paraíso de la Mascota Cali. Todos los derechos
                    reservados.
                </div>
                <div class="flex items-center gap-6">
                    <div class="flex gap-4">
                        {
                            socialLinks.map((social) => (
                                <a
                                    href={social.href}
                                    class="w-10 h-10 rounded-full bg-gray-800 hover:bg-blue-500 flex items-center justify-center transition-all duration-200 transform hover:scale-110"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <i class={`fab ${social.icon}`} />
                                    <span class="sr-only">{social.name}</span>
                                </a>
                            ))
                        }
                    </div>
                    <div class="w-px h-6 bg-gray-800"></div>
                    <div class="flex gap-6 text-sm">
                        <a
                            href="/privacidad"
                            class="text-gray-400 hover:text-blue-400 transition-colors"
                        >
                            Privacidad
                        </a>
                        <a
                            href="/terminos"
                            class="text-gray-400 hover:text-blue-400 transition-colors"
                        >
                            Términos
                        </a>
                        <a
                            href="/admin/login"
                            class="hover:text-primary-300 transition flex items-center"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-4 h-4 mr-1"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M15.75 5.25a3 3 0 0 1 3 3m3 0a6 6 0 0 1-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1 1 21.75 8.25Z"
                                ></path>
                            </svg>
                            Acceso Administrador
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

<!-- Font Awesome -->
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
/>

            <span class="w-8 h-8 flex items-center justify-center bg-gray-200 text-gray-600 rounded-lg">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/></svg>
            </span>
            <span class="font-semibold">Copiar enlace</span>
          </button>
        </div>
      </div>
    </div>
  )}
</div>

<script>
  function initSocialShare() {
    // Limpiar event listeners previos si fuera necesario (aunque con querySelectorAll frescos suele bastar)
    const containers = document.querySelectorAll('.social-share-container');
    
    containers.forEach(container => {
      // Evitar doble inicialización si el componente persiste
      if (container.getAttribute('data-initialized')) return;
      container.setAttribute('data-initialized', 'true');

      const mainBtn = container.querySelector('.share-main-btn');
      const menu = container.querySelector('.share-menu') as HTMLElement;
      const copyBtns = container.querySelectorAll('.copy-link-btn');
      
      const title = container.getAttribute('data-title') || '';
      const text = container.getAttribute('data-description') || '';
      const url = container.getAttribute('data-url') || window.location.href;

      const toggleMenu = (show: boolean) => {
        if (!menu) return;
        if (show) {
          menu.classList.remove('hidden');
          // Forzar reflow para la animación
          menu.offsetHeight; 
          menu.classList.remove('opacity-0', 'scale-95');
        } else {
          menu.classList.add('opacity-0', 'scale-95');
          setTimeout(() => {
            if (menu.classList.contains('opacity-0')) {
              menu.classList.add('hidden');
            }
          }, 200);
        }
      };

      // Lógica de Copiar Enlace
      copyBtns.forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          e.stopPropagation();
          
          navigator.clipboard.writeText(url).then(() => {
            const originalContent = btn.innerHTML;
            btn.innerHTML = `
              <span class="w-8 h-8 flex items-center justify-center bg-green-500 text-white rounded-lg">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              </span>
              <span class="font-bold text-green-600">¡Copiado!</span>
            `;
            
            setTimeout(() => {
              btn.innerHTML = originalContent;
              if (menu) toggleMenu(false);
            }, 2000);
          });
        });
      });

      // Lógica de Menú Desplegable / Web Share API
      if (mainBtn && menu) {
        mainBtn.addEventListener('click', async (e) => {
          e.preventDefault();
          e.stopPropagation();
          
          if (navigator.share) {
            try {
              await navigator.share({ title, text, url });
            } catch (err) {
              // Si falla o el usuario cancela, mostramos el menú como fallback
              if ((err as Error).name !== 'AbortError') {
                toggleMenu(menu.classList.contains('hidden'));
              }
            }
          } else {
            toggleMenu(menu.classList.contains('hidden'));
          }
        });

        // Cerrar al hacer clic fuera
        const closeMenu = (e: MouseEvent) => {
          if (!container.contains(e.target as Node)) {
            toggleMenu(false);
          }
        };
        document.addEventListener('click', closeMenu);
        
        // Limpieza: remover el listener del document cuando el elemento se destruya
        // Astro maneja esto bien al reemplazar el DOM, pero es buena práctica
      }
    });
  }

  // Registrar el evento para View Transitions
  document.addEventListener('astro:page-load', initSocialShare);

  // Fallback para cuando no hay View Transitions o carga inicial
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSocialShare);
  } else {
    initSocialShare();
  }
</script>

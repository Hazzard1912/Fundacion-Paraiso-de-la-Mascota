---
interface Props {
  title: string;
  description?: string;
  url: string;
  buttons?: boolean; // Si es true, muestra botones directos. Si es false, muestra el botón de "Compartir" con menú.
}

const { title, description = "", url, buttons = false } = Astro.props;

const shareLinks = {
  whatsapp: `https://wa.me/?text=${encodeURIComponent(title + " " + url)}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`,
  twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(url)}`,
};

---
import { ClientRouter } from "astro:transitions";

interface Props {
    title?: string;
}

const { title = "Admin Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content="Admin Dashboard" />
        <title>{title}</title>
        <ClientRouter />
    </head>
    <body class="bg-gray-100">
        <div class="flex h-screen">
            <!-- Sidebar -->
            <aside
                class="w-64 bg-gray-800 text-white transition-all duration-300"
                id="sidebar"
            >
                <div class="p-4 border-b border-gray-700">
                    <h2 class="text-xl font-bold">Admin Panel</h2>
                </div>
                <nav class="mt-4">
                    <ul class="space-y-2 px-3">
                        <li>
                            <a
                                href="/admin/dashboard"
                                class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700 transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                                    ></path>
                                </svg>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a
                                href="/admin/mascotas"
                                class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700 transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905a3.61 3.61 0 01-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"
                                    ></path>
                                </svg>
                                <span>Mascotas</span>
                            </a>
                        </li>
                        <li>
                            <a
                                href="/admin/adopciones"
                                class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700 transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                                    ></path>
                                </svg>
                                <span>Adopciones</span>
                            </a>
                        </li>
                        <li>
                            <a
                                href="/admin/solicitudes-adopcion"
                                class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700 transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                    ></path>
                                </svg>
                                <span>Solicitudes de adopción</span>
                            </a>
                        </li>
                        <li>
                            <a
                                href="/admin/solicitudes-apadrinamiento"
                                class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700 transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                    ></path>
                                </svg>
                                <span>Solicitudes de apadrinamiento</span>
                            </a>
                        </li>
                        <li>
                            <a
                                href="/admin/gestion"
                                class="flex items-center gap-3 p-3 rounded-lg hover:bg-gray-700 transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                                    ></path>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path>
                                </svg>
                                <span>Gestión campañas</span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="mt-auto p-4 border-t border-gray-700">
                    <a
                        href="#"
                        id="logout-btn"
                        class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-700 transition-colors"
                    >
                        <svg
                            class="w-5 h-5"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"
                            ></path>
                        </svg>
                        <span>Logout</span>
                    </a>
                </div>
            </aside>

            <!-- Main Content -->
            <main class="flex-1 flex flex-col overflow-hidden">
                <header
                    class="bg-white shadow-sm flex items-center justify-between p-4"
                >
                    <div>
                        <button
                            id="toggle-btn"
                            class="p-2 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-400"
                        >
                            <svg
                                class="w-6 h-6"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="flex items-center gap-4">
                        <!-- TODO: Colocar el usuario -->  <span
                            class="font-medium">Admin User</span
                        >
                    </div>
                </header>

                <div
                    class="flex-1 overflow-auto p-6 bg-gray-100"
                    transition:animate="slide"
                >
                    <slot />
                </div>
            </main>
        </div>

        <script>
            // Toggle sidebar functionality
            document
                .getElementById("toggle-btn")
                ?.addEventListener("click", () => {
                    const sidebar = document.getElementById("sidebar");
                    sidebar?.classList.toggle("w-64");
                    sidebar?.classList.toggle("w-20");

                    // Toggle text visibility
                    document.querySelectorAll("#sidebar span").forEach((el) => {
                        el.classList.toggle("hidden");
                    });
                });

            // Highlight active menu item
            document.addEventListener("DOMContentLoaded", () => {
                const currentPath = window.location.pathname;
                document.querySelectorAll("aside a").forEach((link) => {
                    if (link.getAttribute("href") === currentPath) {
                        link.classList.add("bg-gray-700");
                    }
                });
            });

            // Logout functionality
            document.addEventListener("DOMContentLoaded", async () => {
                const logoutBtn = document.getElementById("logout-btn");
                if (logoutBtn) {
                    const { signOut } = await import("auth-astro/client");

                    logoutBtn.addEventListener("click", async (e) => {
                        e.preventDefault();
                        try {
                            await signOut({
                                callbackUrl: "/admin/login", // Redirect to login page after logout
                            });
                            console.log("Sesión cerrada exitosamente");
                        } catch (error) {
                            console.error("Error al cerrar sesión:", error);
                        }
                    });
                }
            });
        </script>
    </body>
</html>

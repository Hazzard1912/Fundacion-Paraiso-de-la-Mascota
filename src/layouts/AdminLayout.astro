                            ></path>
                        </svg>
                        <span>Logout</span>
                    </a>
                </div>
            </aside>

            <!-- Main Content -->
            <main class="flex-1 flex flex-col overflow-hidden">
                <header
                    class="bg-white shadow-sm flex items-center justify-between p-4"
                >
                    <div>
                        <button
                            id="toggle-btn"
                            class="p-2 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-400"
                        >
                            <svg
                                class="w-6 h-6"
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="flex items-center gap-4">
                        <!-- TODO: Colocar el usuario -->
                        <span class="font-medium">Admin User</span>
                    </div>
                </header>

                <div
                    class="flex-1 overflow-auto p-6 bg-gray-100"
                    transition:animate="slide"
                >
                    <slot />
                </div>
            </main>
        </div>

        <script>
            // Handle sidebar state persistence across navigation
            document.addEventListener("astro:page-load", () => {
                // Get saved sidebar state or default to expanded
                const sidebarCollapsed =
                    localStorage.getItem("sidebarCollapsed") === "true";
                const sidebar = document.getElementById("sidebar");

                // Apply saved state on page load
                if (sidebarCollapsed) {
                    sidebar?.classList.remove("w-64");
                    sidebar?.classList.add("w-20");
                    document.querySelectorAll("#sidebar span").forEach((el) => {
                        el.classList.add("hidden");
                    });
                } else {
                    sidebar?.classList.add("w-64");
                    sidebar?.classList.remove("w-20");
                    document.querySelectorAll("#sidebar span").forEach((el) => {
                        el.classList.remove("hidden");
                    });
                }

                // Toggle sidebar functionality
                document
                    .getElementById("toggle-btn")
                    ?.addEventListener("click", () => {
                        const sidebar = document.getElementById("sidebar");
                        const isNowCollapsed =
                            sidebar?.classList.contains("w-64");

                        sidebar?.classList.toggle("w-64");
                        sidebar?.classList.toggle("w-20");

                        // Toggle text visibility
                        document
                            .querySelectorAll("#sidebar span")
                            .forEach((el) => {
                                el.classList.toggle("hidden");
                            });

                        // Save state to localStorage
                        localStorage.setItem(
                            "sidebarCollapsed",
                            isNowCollapsed.toString(),
                        );
                    });

                // Highlight active menu item
                const currentPath = window.location.pathname;
                document.querySelectorAll("aside a").forEach((link) => {
                    if (link.getAttribute("href") === currentPath) {
                        link.classList.add("bg-gray-700");
                    }
                });
            });

            // Keep logout functionality
            document.addEventListener("astro:page-load", async () => {
                const logoutBtn = document.getElementById("logout-btn");
                if (logoutBtn) {
                    const { signOut } = await import("auth-astro/client");

                    logoutBtn.addEventListener("click", async (e) => {
                        e.preventDefault();
                        try {
                            await signOut({
                                callbackUrl: "/admin/login", // Redirect to login page after logout
                            });
                            console.log("Sesi√≥n cerrada exitosamente");
                        } catch (error) {
                            console.error("Error al cerrar sesi√≥n:", error);
                        }
                    });
                }
            });
        </script>
    </body>
</html>

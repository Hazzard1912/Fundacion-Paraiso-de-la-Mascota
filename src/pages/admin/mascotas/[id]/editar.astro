---
import { actions } from "astro:actions";
import AdminLayout from "../../../../layouts/AdminLayout.astro";
import PetForm from "../../../../components/admin/PetForm.astro";

export const prerender = false;

const { id } = Astro.params;

const { data, error } = await Astro.callAction(actions.getPet, { id });

if (error) {
    console.error(error);
    return Astro.redirect("/404");
}

const pet = data.pet[0] || {};
const isAdopted = pet.isAdopted;
---

<AdminLayout
    title={isAdopted
        ? `Editar Descripción - ${pet.name}`
        : `Editar Mascota - ${pet.name}`}
>
    <div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
        <div class="mb-6">
            <a
                href={`/admin/mascotas/${pet.id}/detalles`}
                class="text-blue-600 hover:text-blue-800 flex items-center"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 mr-1"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                >
                    <path
                        fill-rule="evenodd"
                        d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z"
                        clip-rule="evenodd"></path>
                </svg>
                Volver a detalles
            </a>
        </div>

        <h1 class="text-2xl font-bold mb-6">
            {
                isAdopted
                    ? `Editar descripción de ${pet.name}`
                    : `Editar información de ${pet.name}`
            }
        </h1>

        <PetForm
            pet={pet}
            mode="edit"
            isAdopted={isAdopted}
            backUrl={`/admin/mascotas/${pet.id}/detalles`}
        />
    </div>
</AdminLayout>

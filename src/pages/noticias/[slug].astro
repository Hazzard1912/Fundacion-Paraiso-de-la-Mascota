---
import Layout from "../../layouts/Layout.astro";
import { actions } from "astro:actions";

export const prerender = false;

const { slug } = Astro.params;
const { data, error } = await Astro.callAction(actions.getNoticiaBySlugData, { slug });
const noticia = data?.data;

function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString("es-CO", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

// SEO metadata específica para la noticia
const seoTitle = noticia?.titulo ? `${noticia.titulo} - Fundación Paraíso de la Mascota Cali` : "Noticia - Fundación Paraíso de la Mascota Cali";
const seoDescription = noticia?.resumen || "Noticia de la Fundación Paraíso de la Mascota Cali. Mantente informado sobre nuestros rescates, adopciones y eventos.";
const seoKeywords = noticia?.titulo ? `noticia ${noticia.titulo}, fundación mascotas, ${noticia.titulo.toLowerCase()}, noticias animal Cali` : "noticias fundación mascotas, noticias animal Cali";
const ogImage = noticia?.imagen?.url || "/images/logo.png";

// URLs para compartir
const shareUrl = Astro.url.href;
const shareText = noticia?.titulo ? `Mira esta noticia: ${noticia.titulo}` : "Mira esta noticia de la Fundación Paraíso de la Mascota";

const shareLinks = {
  whatsapp: `https://wa.me/?text=${encodeURIComponent(shareText + " " + shareUrl)}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}`,
  twitter: `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(shareUrl)}`,
};
---

<Layout 
	title={seoTitle}
	description={seoDescription}
	keywords={seoKeywords}
	ogTitle={noticia?.titulo || "Noticia - Fundación Paraíso de la Mascota"}
	ogDescription={seoDescription}
	ogImage={ogImage}
	ogUrl={Astro.url.href}
	canonicalUrl={Astro.url.href}
>
  {noticia ? (
    <article class="min-h-screen bg-white">
      <!-- Header Section -->
      <header class="bg-gradient-to-b from-amber-50 to-white pt-12 md:pt-20 pb-8">
        <div class="max-w-4xl mx-auto px-4">
          <div class="flex flex-col items-center text-center">
            <a 
              href="/noticias" 
              class="group mb-8 flex items-center gap-2 text-amber-600 hover:text-amber-700 font-semibold transition-all"
            >
              <svg class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Volver a noticias
            </a>

            <span class="inline-block bg-amber-100 text-amber-800 px-4 py-1.5 rounded-full text-sm font-bold mb-6 uppercase tracking-wider shadow-sm">
              {formatDate(noticia.fecha)}
            </span>
            
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-gray-900 leading-[1.1] mb-8 tracking-tight">
              {noticia.titulo}
            </h1>

            <!-- Botones de compartir -->
            <div class="flex flex-wrap justify-center gap-3 mb-4">
              <a 
                href={shareLinks.whatsapp} 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex items-center gap-2 bg-[#25D366] text-white px-4 py-2 rounded-xl font-bold hover:scale-105 transition-transform shadow-md"
                title="Compartir en WhatsApp"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                <span class="hidden sm:inline">WhatsApp</span>
              </a>
              <a 
                href={shareLinks.facebook} 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex items-center gap-2 bg-[#1877F2] text-white px-4 py-2 rounded-xl font-bold hover:scale-105 transition-transform shadow-md"
                title="Compartir en Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                <span class="hidden sm:inline">Facebook</span>
              </a>
              <a 
                href={shareLinks.twitter} 
                target="_blank" 
                rel="noopener noreferrer"
                class="flex items-center gap-2 bg-black text-white px-4 py-2 rounded-xl font-bold hover:scale-105 transition-transform shadow-md"
                title="Compartir en X"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                <span class="hidden sm:inline">X</span>
              </a>
              <button 
                id="copy-link"
                class="flex items-center gap-2 bg-gray-100 text-gray-700 px-4 py-2 rounded-xl font-bold hover:bg-gray-200 transition-colors shadow-sm border border-gray-200"
                title="Copiar enlace"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"/></svg>
                <span class="hidden sm:inline">Copiar</span>
              </button>
            </div>
          </div>
        </div>
      </header>

      <!-- Image Section - Adaptable -->
      <section class="pb-12">
        <div class="max-w-5xl mx-auto px-4">
          {noticia.imagen?.url && (
            <div class="relative group">
              <div class="absolute -inset-1 bg-gradient-to-r from-amber-500 to-orange-500 rounded-[2rem] blur opacity-25 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>
              <div class="relative rounded-3xl overflow-hidden shadow-2xl bg-gray-100 ring-1 ring-black/5">
                <img 
                  src={noticia.imagen.url} 
                  alt={noticia.imagen.alternativeText || noticia.titulo} 
                  class="w-full h-auto max-h-[75vh] object-contain mx-auto block"
                />
              </div>
            </div>
          )}
        </div>
      </section>

      <!-- Resumen / Lead -->
      <section class="py-8">
        <div class="max-w-4xl mx-auto px-4">
          <div class="bg-amber-50/50 rounded-3xl p-8 md:p-10 border border-amber-100 shadow-sm">
            <p class="text-xl md:text-2xl text-gray-800 leading-relaxed font-medium italic">
              {noticia.resumen}
            </p>
          </div>
        </div>
      </section>

      <!-- Contenido principal -->
      <section class="py-12 md:py-16">
        <div class="max-w-4xl mx-auto px-4">
          <div class="prose prose-lg md:prose-xl prose-amber max-w-none">
            <!-- Separador visual -->
            <div class="w-20 h-1.5 bg-gradient-to-r from-amber-500 to-orange-500 rounded-full mb-12"></div>
            
            <!-- ✅ Renderizar HTML directamente -->
            <div set:html={noticia.contenido} class="contenido-noticia"></div>
          </div>
        </div>
      </section>

      <!-- Sección de cierre -->
      <section class="bg-gradient-to-b from-white to-amber-50 py-20">
        <div class="max-w-4xl mx-auto px-4 text-center">
          <div class="inline-flex items-center gap-3 mb-10">
            <span class="h-px w-12 bg-amber-200"></span>
            <div class="flex items-center gap-2 text-amber-700">
              <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
              <span class="text-sm font-bold uppercase tracking-widest">Paraíso de la mascota Cali</span>
              <span class="w-2 h-2 bg-amber-500 rounded-full animate-pulse"></span>
            </div>
            <span class="h-px w-12 bg-amber-200"></span>
          </div>

          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a
              href="/noticias"
              class="group inline-flex items-center gap-3 bg-white text-amber-600 border-2 border-amber-600 px-8 py-4 rounded-2xl font-bold hover:bg-amber-600 hover:text-white transition-all duration-300 shadow-md hover:shadow-xl"
            >
              <svg class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 12H5m7-7-7 7 7 7"></path>
              </svg>
              Ver todas las noticias
            </a>
            
            <a
              href="/adopta"
              class="inline-flex items-center gap-3 bg-amber-600 text-white px-8 py-4 rounded-2xl font-bold hover:bg-amber-700 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl"
            >
              ¡Quiero adoptar!
              <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </a>
          </div>
        </div>
      </section>
    </article>
  ) : (
    <section class="bg-amber-50 py-20 min-h-[60vh]">
      <div class="max-w-4xl mx-auto px-4">
        <div class="text-center text-gray-500 py-32">
          No se encontró la noticia.
        </div>
      </div>
    </section>
  )}
</Layout>

<!-- ✅ ESTILOS ADICIONALES para el contenido CKEditor -->
<style>
  /* Asegurar que el contenido del editor se vea bien */
  .contenido-noticia {
    @apply text-gray-800 leading-relaxed;
  }
  
  /* Estilos para elementos de CKEditor */
  :global(.contenido-noticia h1) {
    @apply text-3xl md:text-4xl font-black mt-12 mb-6 text-gray-900 leading-tight;
  }
  
  :global(.contenido-noticia h2) {
    @apply text-2xl md:text-3xl font-bold mt-10 mb-5 text-gray-900 leading-tight;
  }
  
  :global(.contenido-noticia h3) {
    @apply text-xl md:text-2xl font-bold mt-8 mb-4 text-gray-900 leading-tight;
  }
  
  :global(.contenido-noticia p) {
    @apply mb-6 text-lg md:text-xl leading-relaxed text-gray-700;
  }
  
  :global(.contenido-noticia strong) {
    @apply font-bold text-gray-900;
  }
  
  :global(.contenido-noticia span) {
    @apply inline;
  }
  
  /* Estilos para listas */
  :global(.contenido-noticia ul) {
    @apply list-disc list-outside mb-8 ml-6 space-y-3 text-gray-700;
  }
  
  :global(.contenido-noticia ol) {
    @apply list-decimal list-outside mb-8 ml-6 space-y-3 text-gray-700;
  }
  
  :global(.contenido-noticia li) {
    @apply mb-2 text-lg md:text-xl leading-relaxed;
  }
  
  :global(.contenido-noticia li span) {
    @apply inline;
  }
  
  /* Estilos para enlaces */
  :global(.contenido-noticia a) {
    @apply text-amber-600 hover:text-amber-700 font-semibold underline decoration-amber-200 decoration-2 underline-offset-4 transition-all duration-200;
  }
  
  /* Estilos para imágenes del editor */
  :global(.contenido-noticia img) {
    @apply max-w-full h-auto rounded-2xl shadow-xl my-12 mx-auto block ring-1 ring-black/5;
  }
  
  /* Espaciado para divs */
  :global(.contenido-noticia div) {
    @apply mb-4;
  }
  
  /* Estilos para emojis en títulos */
  :global(.contenido-noticia h1),
  :global(.contenido-noticia h2) {
    @apply flex items-center gap-2;
  }
  
  /* Estilos para tablas */
  :global(.contenido-noticia table) {
    @apply w-full border-collapse border border-gray-300 my-6 rounded-lg overflow-hidden shadow-sm;
  }
  
  :global(.contenido-noticia th),
  :global(.contenido-noticia td) {
    @apply border border-gray-300 px-4 py-2;
  }
  
  :global(.contenido-noticia th) {
    @apply bg-amber-50 font-bold text-gray-900;
  }
  
  /* Estilos para citas */
  :global(.contenido-noticia blockquote) {
    @apply border-l-4 border-amber-500 pl-6 py-4 my-6 italic bg-amber-50 rounded-r-lg;
  }
  
  /* Espaciado mejorado entre secciones */
  :global(.contenido-noticia h2 + p) {
    @apply mt-0;
  }
  
  /* Estilos específicos para el contenido estructurado */
  :global(.contenido-noticia h2:not(:first-child)) {
    @apply mt-12 mb-4 pb-2 border-b border-amber-200;
  }
</style>

<script>
  const copyBtn = document.getElementById('copy-link');
  if (copyBtn) {
    copyBtn.addEventListener('click', () => {
      navigator.clipboard.writeText(window.location.href);
      
      const originalContent = copyBtn.innerHTML;
      copyBtn.innerHTML = `
        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
        <span class="hidden sm:inline text-green-600">¡Copiado!</span>
      `;
      copyBtn.classList.add('bg-green-50', 'border-green-200');
      
      setTimeout(() => {
        copyBtn.innerHTML = originalContent;
        copyBtn.classList.remove('bg-green-50', 'border-green-200');
      }, 2000);
    });
  }
</script>

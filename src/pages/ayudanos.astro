    <!-- Voluntariado -->
    <section
        id="voluntariado"
        class="bg-amber-800 text-white py-20 px-4 relative overflow-hidden"
    >
        <div class="absolute inset-0 bg-amber-900/50"></div>
        <div class="absolute right-0 top-0 bottom-0 w-1/3 overflow-hidden">
            <img
                src="https://images.unsplash.com/photo-1581888227599-779811939961"
                alt="Voluntarios con perros"
                class="w-full h-full object-cover opacity-20 md:opacity-30"

---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Ayúdanos - Fundación">
    <main class="max-w-7xl mx-auto px-4 py-12">
        <!-- Sección Dona -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold text-center mb-8">Dona</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">Donación única</h3>
                    <div class="space-y-4">
                        <button
                            class="w-full py-2 bg-blue-600 text-white rounded-md"
                            >$20.000</button
                        >
                        <button
                            class="w-full py-2 bg-blue-600 text-white rounded-md"
                            >$50.000</button
                        >
                        <button
                            class="w-full py-2 bg-blue-600 text-white rounded-md"
                            >$100.000</button
                        >
                    </div>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">
                        Transferencia Bancaria
                    </h3>
                    <p>Banco: XXXXX</p>
                    <p>Cuenta: XXXXX</p>
                    <img
                        src="/qr-code.png"
                        alt="Código QR"
                        class="mt-4 mx-auto"
                    />
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">
                        Plan Padrino Mensual
                    </h3>
                    <p class="mb-4">Apoya mensualmente nuestros programas</p>
                    <button
                        class="w-full py-2 bg-green-600 text-white rounded-md"
                        >Suscribirse</button
                    >
                </div>
            </div>
        </section>

        <!-- Sección Apadrina -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold text-center mb-8">Apadrina</h2>
            <div class="max-w-2xl mx-auto text-center">
                <p class="mb-6">
                    Cambia la vida de un niño a través de nuestro programa de
                    apadrinamiento.
                </p>
                <button class="px-8 py-3 bg-orange-600 text-white rounded-md"
                    >Apadrinar ahora</button
                >
            </div>
        </section>

        <!-- Sección Voluntariado -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold text-center mb-8">Voluntariado</h2>
            <div class="grid md:grid-cols-2 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">
                        Programas disponibles
                    </h3>
                    <ul class="list-disc list-inside mb-4">
                        <li>Apoyo educativo</li>
                        <li>Actividades recreativas</li>
                        <li>Apoyo administrativo</li>
                        <li>Eventos especiales</li>
                    </ul>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">Requisitos</h3>
                    <ul class="list-disc list-inside mb-4">
                        <li>Ser mayor de edad</li>
                        <li>Disponibilidad mínima de 4 horas semanales</li>
                        <li>Compromiso mínimo de 3 meses</li>
                    </ul>
                    <button
                        class="w-full py-2 bg-purple-600 text-white rounded-md"
                        >Inscribirse como voluntario</button
                    >
                </div>
            </div>
        </section>

        <!-- Sección Donaciones en especie -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold text-center mb-8">
                Donaciones en especie
            </h2>
            <div class="grid md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">
                        Necesidades actuales
                    </h3>
                    <ul class="list-disc list-inside">
                        <li>Útiles escolares</li>
                        <li>Ropa infantil</li>
                        <li>Alimentos no perecederos</li>
                        <li>Artículos de higiene</li>
                    </ul>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">
                        Puntos de recepción
                    </h3>
                    <p>Sede Principal:</p>
                    <p>Dirección XXXXX</p>
                    <p>Horario: Lunes a Viernes 9:00 - 17:00</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-semibold mb-4">Contacto</h3>
                    <p>Teléfono: (XX) XXXX-XXXX</p>
                    <p>Email: donaciones@fundacion.org</p>
                    <button
                        class="w-full py-2 bg-teal-600 text-white rounded-md mt-4"
                        >Coordinar entrega</button
                    >
                </div>
            </div>
        </section>
    </main>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import { pets } from "../data/pets";

const filters = {
    especie: ["Perro", "Gato"],
    tamaño: ["Pequeño", "Mediano", "Grande"],
    edad: ["Cachorro", "Joven", "Adulto", "Senior"],
    sexo: ["Macho", "Hembra"],
};
---

<Layout title="Adopta - Paraíso de la mascota Cali">
    <!-- Hero section with modern gradient -->
    <section
        class="relative bg-gradient-to-br from-amber-900 to-amber-700 text-white py-32"
    >
        <div class="absolute inset-0 bg-black/20"></div>
        <div class="relative max-w-6xl mx-auto px-4">
            <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in">
                Encuentra a tu Compañero Ideal
            </h1>
            <p class="text-xl text-amber-50 max-w-2xl leading-relaxed">
                Cada uno de nuestros peludos tiene una historia única y está
                esperando formar parte de tu familia.
            </p>
        </div>
    </section>

    <div class="max-w-6xl mx-auto px-4 py-16">
        <!-- Modern filters with animation -->
        <div
            class="bg-white rounded-2xl shadow-lg p-8 mb-12 transform hover:shadow-xl transition-all duration-300"
        >
            <h2 class="text-2xl font-semibold mb-6 text-amber-900">
                Filtrar Mascotas
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                {
                    Object.entries(filters).map(([category, options]) => (
                        <div class="group">
                            <label class="block text-sm font-medium text-gray-700 mb-2 capitalize">
                                {category}
                            </label>
                            <select
                                class="w-full rounded-lg border-gray-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 transition-colors group-hover:border-amber-400"
                                data-filter={category}
                            >
                                <option value="">Todos</option>
                                {options.map((option) => (
                                    <option value={option}>{option}</option>
                                ))}
                            </select>
                        </div>
                    ))
                }
            </div>
        </div>

        <!-- Elegant pets grid with modern cards -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" id="petsGrid">
            {
                pets.map((pet) => (
                    <a href={`/adopta/${pet.id}`} class="group">
                        <article
                            class="bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
                            data-pet-id={pet.id}
                        >
                            <div class="aspect-square relative overflow-hidden">
                                <img
                                    src={pet.images[0]}
                                    alt={pet.name}
                                    class="absolute inset-0 w-full h-full object-cover transition-transform group-hover:scale-110 duration-500"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                                <div class="absolute top-4 right-4 flex gap-2">
                                    <span class="px-4 py-2 bg-amber-500 text-white rounded-full text-sm font-medium shadow-lg">
                                        {pet.especie}
                                    </span>
                                    <span class="px-4 py-2 bg-white/90 text-amber-900 rounded-full text-sm font-medium shadow-lg">
                                        {pet.tamaño}
                                    </span>
                                </div>
                            </div>
                            <div class="p-6">
                                <div class="flex justify-between items-start mb-4">
                                    <div>
                                        <h3 class="text-xl font-semibold text-amber-900 group-hover:text-amber-600 transition-colors">
                                            {pet.name}
                                        </h3>
                                        <p class="text-gray-500">{pet.edad}</p>
                                    </div>
                                </div>
                                <p class="text-gray-600 line-clamp-2 mb-6">
                                    {pet.description}
                                </p>
                                <div class="w-full bg-amber-100 text-amber-800 text-center py-3 px-6 rounded-xl group-hover:bg-amber-600 group-hover:text-white transition-colors duration-300">
                                    Conocer más
                                </div>
                            </div>
                        </article>
                    </a>
                ))
            }
        </div>
    </div>
</Layout>

<style>
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

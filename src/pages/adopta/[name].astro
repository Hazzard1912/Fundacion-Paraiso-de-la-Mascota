---
import Layout from "../../layouts/Layout.astro";
import { pets } from "../../data/pets";
import "photoswipe/style.css";

export async function getStaticPaths() {
    return pets.map((pet) => ({
        params: { name: pet.id },
        props: { pet },
    }));
}

const { pet } = Astro.props;

// Para el demo, duplicamos las imágenes para tener una galería
const gallery = [...Array(6)].map(() => pet.images[0]);
---

<Layout title={`${pet.name} - Adopción - Paraíso de la mascota Cali`}>
    <main class="bg-amber-50/50 min-h-screen pb-16">
        <!-- Botón Volver -->
        <button
            onclick="history.back()"
            class="fixed top-6 left-6 z-10 bg-white/80 backdrop-blur-sm text-amber-900 px-4 py-2 rounded-full shadow-lg hover:bg-amber-100 transition-colors flex items-center gap-2"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 20 20"
                fill="currentColor"
            >
                <path
                    fill-rule="evenodd"
                    d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                    clip-rule="evenodd"></path>
            </svg>
            Volver
        </button>

        <!-- Hero con imagen principal -->
        <div class="h-[60vh] relative overflow-hidden">
            <img
                src={pet.images[0]}
                alt={pet.name}
                class="w-full h-full object-cover"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"
            >
            </div>
            <div
                class="absolute bottom-0 left-0 right-0 p-8 text-white max-w-6xl mx-auto"
            >
                <h1 class="text-5xl font-bold mb-4">{pet.name}</h1>
                <div class="flex gap-4">
                    <span
                        class="px-4 py-2 bg-amber-500/90 rounded-full text-sm font-medium"
                    >
                        {pet.especie}
                    </span>
                    <span
                        class="px-4 py-2 bg-white/90 text-amber-900 rounded-full text-sm font-medium"
                    >
                        {pet.tamaño}
                    </span>
                    <span
                        class="px-4 py-2 bg-white/90 text-amber-900 rounded-full text-sm font-medium"
                    >
                        {pet.edad}
                    </span>
                </div>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="max-w-6xl mx-auto px-4 py-12">
            <div class="grid md:grid-cols-2 gap-12">
                <!-- Columna izquierda: Información -->
                <div class="space-y-8">
                    <div class="bg-white rounded-2xl p-8 shadow-lg">
                        <h2 class="text-2xl font-bold text-amber-900 mb-4">
                            Sobre {pet.name}
                        </h2>
                        <p class="text-gray-600 leading-relaxed mb-6">
                            {pet.description}
                        </p>
                        <div class="grid grid-cols-2 gap-4">
                            <div class="bg-amber-50 p-4 rounded-xl">
                                <span class="text-amber-900 font-medium"
                                    >Edad:</span
                                >
                                <p class="text-gray-600">{pet.edad}</p>
                            </div>
                            <div class="bg-amber-50 p-4 rounded-xl">
                                <span class="text-amber-900 font-medium"
                                    >Sexo:</span
                                >
                                <p class="text-gray-600">{pet.sexo}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="flex gap-4">
                        <a
                            href="#"
                            class="flex-1 bg-amber-600 text-white text-center py-4 px-6 rounded-xl font-semibold hover:bg-amber-700 transition-colors"
                        >
                            Adoptar a {pet.name}
                        </a>
                        <a
                            href="#"
                            class="flex-1 border-2 border-amber-600 text-amber-600 text-center py-4 px-6 rounded-xl font-semibold hover:bg-amber-50 transition-colors"
                        >
                            Apadrinar
                        </a>
                    </div>
                </div>

                <!-- Columna derecha: Galería -->
                <div class="grid grid-cols-2 gap-4 pswp-gallery" id="gallery">
                    {
                        gallery.map((img, index) => (
                            <a
                                href={img}
                                data-pswp-width="1500"
                                data-pswp-height="1000"
                                target="_blank"
                                class={`rounded-xl overflow-hidden shadow-lg ${
                                    index === 0 ? "col-span-2 row-span-2" : ""
                                }`}
                            >
                                <img
                                    src={img}
                                    alt={`${pet.name} - Foto ${index + 1}`}
                                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                />
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </main>
</Layout>


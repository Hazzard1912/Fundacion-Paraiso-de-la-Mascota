---
import Layout from "../../layouts/Layout.astro";

// Lista de servicios veterinarios disponibles
const serviciosVeterinarios = [
    "Consulta general",
    "Medicina interna",
    "Cirugía",
    "Hospitalización",
    "Laboratorio clínico",
    "Ecografía",
    "Vacunación",
    "Certificado de salud para viajes",
];

// Ventajas de nuestros servicios
const ventajas = [
    {
        titulo: "Personal especializado",
        descripcion:
            "Nuestros veterinarios tienen amplia experiencia en diferentes especialidades médicas.",
        icono: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
    },
    {
        titulo: "Atención personalizada",
        descripcion:
            "Cuidamos a cada mascota de forma individual, adaptando nuestros tratamientos a sus necesidades.",
        icono: "M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z",
    },
    {
        titulo: "Instalaciones modernas",
        descripcion:
            "Contamos con equipos de última generación para diagnósticos precisos y tratamientos efectivos.",
        icono: "M7 2a1 1 0 00-.707 1.707L7 4.414v3.758a1 1 0 01-.293.707l-4 4C.817 14.769 2.354 18 4.828 18h10.343c2.474 0 4.011-3.231 2.122-5.121l-4-4A1 1 0 0113 8.172V4.414l.707-.707A1 1 0 0013 2H7z",
    },
];
---

<Layout 
	title="Servicios Veterinarios - Fundación Paraíso de la Mascota Cali"
	description="Servicios veterinarios completos para tu mascota en Cali. Consultas, vacunación, esterilización, cirugías, emergencias 24/7 y más. Cuidamos a tu compañero con amor y profesionalismo."
	keywords="veterinario Cali, clínica veterinaria, servicios mascotas, vacunación, esterilización, cirugías mascotas, emergencias veterinarias, consulta veterinaria"
	ogTitle="Servicios Veterinarios - Fundación Paraíso de la Mascota"
	ogDescription="Cuidamos a tu mascota con amor y profesionalismo. Servicios veterinarios completos en Cali."
>
    <!-- Hero section mejorado -->
    <section
        class="relative bg-gradient-to-br from-amber-800 to-amber-900 text-white py-24"
    >
        <div class="absolute inset-0 overflow-hidden">
            <img
                src="https://images.unsplash.com/photo-1583337426008-2fef51aa841e"
                alt="Clínica Veterinaria"
                class="w-full h-full object-cover opacity-25 mix-blend-overlay"
            />
        </div>
        <div class="relative z-10 max-w-6xl mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-6">
                Clínica Veterinaria
            </h1>
            <p class="text-xl text-amber-100 max-w-3xl mx-auto">
                Atención médica profesional para el cuidado y bienestar de tu
                mascota
            </p>
        </div>
    </section>

    <div class="max-w-6xl mx-auto px-4 py-12">
        <!-- Navegación de migas de pan mejorada -->
        <nav class="flex mb-10 text-sm bg-amber-50 p-3 rounded-lg">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a
                        href="/"
                        class="text-amber-800 hover:text-amber-600 transition-colors"
                    >
                        Inicio
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg
                            class="w-3 h-3 text-gray-400 mx-1"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 6 10"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="m1 9 4-4-4-4"></path>
                        </svg>
                        <a
                            href="/servicios"
                            class="ml-1 text-amber-800 hover:text-amber-600 transition-colors"
                        >
                            Servicios
                        </a>
                    </div>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg
                            class="w-3 h-3 text-gray-400 mx-1"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 6 10"
                        >
                            <path
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="m1 9 4-4-4-4"></path>
                        </svg>
                        <span class="ml-1 font-medium text-amber-900">
                            Clínica Veterinaria
                        </span>
                    </div>
                </li>
            </ol>
        </nav>

        <!-- Imagen destacada -->
        <div class="mb-12 rounded-xl overflow-hidden shadow-lg">
            <img
                src="https://images.unsplash.com/photo-1581888227599-779811939961?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
                alt="Equipo veterinario"
                class="w-full h-[400px] object-cover"
            />
        </div>

        <!-- Servicios Veterinarios - Layout mejorado -->
        <section class="mb-12">
            <h2 class="text-3xl font-bold text-amber-900 mb-8 text-center">
                Nuestros Servicios Veterinarios
            </h2>

            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                {
                    serviciosVeterinarios.map((servicio) => (
                        <div class="bg-white shadow-sm border border-amber-100 hover:border-amber-300 transition-colors rounded-lg p-4 text-center">
                            <div class="w-10 h-10 mx-auto bg-amber-100 rounded-full flex items-center justify-center mb-2">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 text-amber-600"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                                        clip-rule="evenodd"
                                    />
                                </svg>
                            </div>
                            <span class="text-gray-700 text-sm">
                                {servicio}
                            </span>
                        </div>
                    ))
                }
            </div>

            <div
                class="bg-amber-100 rounded-lg p-4 border-l-4 border-amber-500"
            >
                <div class="flex items-start gap-3">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 text-amber-700 mt-0.5 flex-shrink-0"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                            clip-rule="evenodd"></path>
                    </svg>
                    <p class="text-amber-800">
                        <strong>Atención prioritaria disponible:</strong> Ofrecemos
                        servicios de urgencia para casos que requieran atención inmediata.
                        Comunícate por WhatsApp para más información.
                    </p>
                </div>
            </div>
        </section>

        <!-- Por qué elegirnos - Layout mejorado -->
        <section class="mb-12 bg-amber-50 rounded-xl p-8">
            <h2 class="text-3xl font-bold text-amber-900 mb-8 text-center">
                ¿Por qué elegir nuestra clínica?
            </h2>

            <div class="grid md:grid-cols-3 gap-6">
                {
                    ventajas.map((ventaja) => (
                        <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                            <div class="flex items-center gap-4 mb-4">
                                <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-6 w-6 text-amber-700"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path d={ventaja.icono} />
                                    </svg>
                                </div>
                                <h3 class="text-lg font-semibold text-amber-900">
                                    {ventaja.titulo}
                                </h3>
                            </div>
                            <p class="text-gray-600">{ventaja.descripcion}</p>
                        </div>
                    ))
                }
            </div>
        </section>

        <!-- Información de Contacto - Layout mejorado -->
        <section
            class="bg-white rounded-xl shadow-lg p-8 mb-12 border border-amber-100"
        >
            <h2 class="text-3xl font-bold text-amber-900 mb-8 text-center">
                Información de Contacto
            </h2>

            <div class="grid md:grid-cols-2 gap-8">
                <div class="space-y-6">
                    <div class="flex gap-4 items-start">
                        <div
                            class="w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 text-amber-700"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-amber-800">
                                Dirección
                            </h3>
                            <p class="text-gray-600">
                                Calle 5F #36-100, Santiago de Cali, Colombia
                            </p>
                            <a
                                href="https://maps.app.goo.gl/7EXogJccwjJ3CoBf7"
                                target="_blank"
                                class="text-amber-600 text-sm inline-flex items-center mt-1 hover:underline"
                            >
                                Ver en Google Maps
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-4 w-4 ml-1"
                                    viewBox="0 0 20 20"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"
                                    ></path>
                                    <path
                                        d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"
                                    ></path>
                                </svg>
                            </a>
                        </div>
                    </div>

                    <div class="flex gap-4 items-start">
                        <div
                            class="w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 text-amber-700"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-amber-800">
                                Teléfono
                            </h3>
                            <p class="text-gray-600">318 2803901</p>
                            <a
                                href="tel:+573182803901"
                                class="text-amber-600 text-sm hover:underline"
                                >Llamar ahora</a
                            >
                        </div>
                    </div>
                </div>

                <div class="space-y-6">
                    <div class="flex gap-4 items-start">
                        <div
                            class="w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 text-amber-700"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                                ></path>
                                <path
                                    d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                                ></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-amber-800">Email</h3>
                            <p class="text-gray-600">cliniparaiso@gmail.com</p>
                            <a
                                href="mailto:cliniparaiso@gmail.com"
                                class="text-amber-600 text-sm hover:underline"
                                >Enviar correo</a
                            >
                        </div>
                    </div>

                    <div class="flex gap-4 items-start">
                        <div
                            class="w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 text-amber-700"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="font-semibold text-amber-800">
                                Horario de atención
                            </h3>
                            <p class="text-gray-600">
                                Lunes a Viernes: 8:00 AM - 6:00 PM
                            </p>
                            <p class="text-gray-600">
                                Sábados: 8:00 AM - 2:00 PM
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Botón de contacto -->
        <div class="text-center mb-8">
            <a
                href="https://wa.me/573182803901?text=Hola,%20me%20gustaría%20más%20información%20sobre%20los%20servicios%20veterinarios"
                target="_blank"
                class="inline-flex items-center justify-center gap-2 bg-green-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-green-700 transition-colors shadow-md"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                    ></path>
                </svg>
                Consulta por WhatsApp
            </a>

            <p class="mt-4 text-gray-600">
                ¡Síguenos en redes sociales! <a
                    href="https://www.instagram.com/clinicaparaisodelamascota"
                    target="_blank"
                    class="text-amber-600 hover:underline"
                    >@clinicaparaisodelamascota</a
                >
            </p>
        </div>
    </div>
</Layout>
